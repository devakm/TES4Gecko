    		put ("GetLineOfSight", GetLineOfSight);
    		put ("GetPCExpelled", GetPCExpelled);
    		put ("GetPCFactionAttack", GetPCFactionAttack);
    		put ("GetPCFactionMurder", GetPCFactionMurder);
    		put ("GetPCFactionSteal", GetPCFactionSteal);
